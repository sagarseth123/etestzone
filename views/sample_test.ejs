<%- include('partials/header') %>
<title>sample test</title>
</head>
<body>




    <div id="myDIV" style="display: none;" class="container">
        <form id="submit" action="/add_to_school_test" method="POST">
            <% var x=no+1; %>
                <h3>question
                    <%= x %>
                </h3>

                <textarea name="Q" form="submit" class="text-center" placeholder="question no <%= x %>" cols="40em" rows="6" required></textarea>
                <br><br><br>
                <input type="hidden" name="tname" value="<%= name %>">
                <input type="text" placeholder="a" name="a" required> <input type="radio" name="A" value="a" required> <br>
                <br> <input type="text" placeholder="b" name="b" required> <input type="radio" name="A" value="b" required> <br>
                <br> <input type="text" placeholder="c" name="c" required> <input type="radio" name="A" value="c" required> <br>
                <br> <input type="text" placeholder="d" name="d" required> <input type="radio" name="A" value="d" required> <br>
                <br> <label for="answer">please choose the correct answer </label>
                <br> <button type="submit">next</button><br><br><br>
        </form>

    </div>



    <div>
        <h4 style="padding-right: 0.2rem;padding-left: 0.2rem;">Please Note your Test ID and give this to your Students</h4>
        <div class="card">
            <div class="card-header">
                <h3 style="font-weight: 300;">Test ID:
                    <%= name %>
                </h3 style="font-weight: 300;">
                <h5 style="font-weight: 300;">Date:
                    <%= date %>
                </h5>
                <h5 style="font-weight: 300;">Marks per question:
                    <%= pmark %>
                </h5>
                <h5 style="font-weight: 300;">Negative Marks per question:
                    <%= nmark  %>
                </h5>
                <div class="row">
                    <div class="col-6">
                        <h5 style="font-weight: 300;">Total marks:
                            <%= tmarks %>
                        </h5>
                    </div>
                    <div class="col-6">
                        <button style="margin-left: 28%;" id="add" class="btn btn-sm btn-dark">Add question</button>
                    </div>
                </div>

            </div>
            <hr>
            <div class="card-footer">
                <% for(var i=0;i< no;i++){ %>

                    <% var qno=i+1; %>
                        <h6> Q
                            <%= qno  %> )
                                <%= question[i][0].question  %>
                        </h6>

                        <% var naam= 'answer'+i; %>

                            <input type="radio" class="<%= naam %>" name="<%= naam %>" value="a">
                            <label> <%= question[i][0].a %> </label><br>
                            <input type="radio" class="<%= naam %>" name="<%= naam %>" value="b">
                            <label> <%= question[i][0].b %>  </label><br>
                            <input type="radio" class="<%= naam %>" name="<%= naam %>" value="c">
                            <label> <%= question[i][0].c %> </label><br>
                            <input type="radio" class="<%= naam %>" name="<%= naam %>" value="d">
                            <label> <%= question[i][0].d %> </label><br>

                            <form action="/delete_question" method="POST">
                                <input type="hidden" name="tname" value="<%= name %>">
                                <button name="qno" value="<%= qno %>" type="submit" style="border-color: black;border-width: thin;border-radius: 5px;margin-left: 80%;">Delete</button>
                            </form>


                            <hr>
                            <% } %>


            </div>
        </div>
        <div style="margin:1rem 1rem;" class="row">
            <div class="col-6">
                <button id="teacher" class="btn btn-dark">Submit</button>
            </div>
            <div class="col-6">
                <a href="/teacher_page">Go back</a>
            </div>
        </div>

        <script>
            document.getElementById("teacher").onclick = function() {
                alert('You cannot give test as you are Teacher');

            }
        </script>

        <script>
            document.getElementById("add").onclick = function() {
                var x = document.getElementById("myDIV");
                if (x.style.display === "none") {
                    x.style.display = "block";
                } else {
                    x.style.display = "none";
                }

            }
        </script>