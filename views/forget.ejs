    <script>
        if (<%= shift %> == 2) {
            document.getElementById('shift2').style.display = 'block';
            document.getElementById('shift1').style.display = 'none';
        } else if (<%= shift %> == 1) {
            document.getElementById('shift1').style.display = 'block';
            document.getElementById('shift2').style.display = 'none';
        }
        if (<%= valid %> == 1) {
            alert("Incorrect Email,please give correct email address");
        }

        function forget() {
            alert("A link has been sent to your gmail account,please reset your password from there");
        }

        function check() {
            var pass1 = document.getElementById('password1').value;
            var pass = document.getElementById('password').value;
            if (pass1 == pass) {
                document.getElementById('reset_password').submit();
            } else {
                alert("Passwords are not matching");
            }
        }
    </script>

